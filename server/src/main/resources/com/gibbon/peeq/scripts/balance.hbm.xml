<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.gibbon.peeq.db.model.Balance" dynamic-update="true"
    table="BALANCE">
    <id name="uid" type="java.lang.String">
      <column name="uid" />
      <generator class="foreign">
        <param name="property">user</param>
      </generator>
    </id>
    <property name="val" type="long">
      <column name="val" />
    </property>
    <one-to-one name="user" class="com.gibbon.peeq.db.model.User"
      constrained="true" />
  </class>
</hibernate-mapping>
